<h1>Edit task</h1>
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_area :details %>
  <%= f.label :completed %>
  <%= f.checkbox :completed %>
  <%= f.submit "Update Task" %>
<% end %>
<hr>
<%= link_to 'Back to list', tasks_path %>