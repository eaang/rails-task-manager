<div class="container">
<div class="title"><h1><%= @task.title %></h1></div>
<div class="btn btn-secondary"><%= link_to '✎ Edit this task', edit_task_path(@task) %></div>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p>✔️ This task is completed</p>
<% else %>
  <p>❌ This task is not completed yet</p>
<% end %>
<hr>
<%= link_to '↩️ Back to list', tasks_path %>
</div>