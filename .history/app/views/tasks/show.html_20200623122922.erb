<div class="container">
<div class="card">
  <div class="card-body">
    <h1 class="card-title"><%= @task.title %></h1>
    <%= link_to '✎ Edit this task', edit_task_path(@task), :class => "btn btn-outline-dark" %>
    <%= @task.details %>
  </div>
</div>
<% if @task.completed %>
<div class="">✔️ This task is completed</div>
<% else %>
<div class="">❌ This task is not completed yet</div>
<% end %>
<hr>
↩️ <%= link_to 'Back to list', tasks_path %>
</div>