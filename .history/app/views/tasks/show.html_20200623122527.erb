<div class="container">
<div class="title"><h1><%= @task.title %></h1></div>
<%= link_to '✎ Edit this task', edit_task_path(@task), :class => "btn btn-outline-dark" %>
<div class="blockquote"><%= @task.details %></div>
<% if @task.completed %>
<div class="blockquote">✔️ This task is completed</div>
<% else %>
<div class="blockquote">❌ This task is not completed yet</div>
<% end %>
<hr>
↩️ <%= link_to 'Back to list', tasks_path %>
</div>