<div class="container">
<div class="title"><h1>My tasks</h1></div>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li>✔️ <%= link_to task.title, task %> • <%= link_to "🗑️",
            task_path(task),
            method: :delete,
            data: { confirm: "Delete #{task.title}?" },
            :class => "text-decoration-none" %></li>
    <% else %>
      <li>❌ <%= link_to task.title, task %> • <%= link_to "🗑️",
            task_path(task),
            method: :delete,
            data: { confirm: "Delete #{task.title}?" },
            :class => "text-decoration-none" %></li>
    <% end %>
  <% end %>
</ul>
<hr>
➕ <%= link_to 'Add a new task', new_task_path %>
</div>