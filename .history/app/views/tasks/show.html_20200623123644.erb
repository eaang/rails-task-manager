<div class="container">
<div class="d-flex justify-content-between">
<h1><%= @task.title %></h1>
<div><%= link_to '✎ Edit this task', edit_task_path(@task), :class => "btn btn-outline-dark flex-shrink-0" %></div>
</div>
<div class="card">
  <div class="card-body">
    <p class="card-text"><%= @task.details %></p>
  </div>
</div><br>
<% if @task.completed %>
<div class="">✔️ This task is completed</div>
<% else %>
<div class="">❌ This task is not completed yet</div>
<% end %>
<hr>
↩️ <%= link_to 'Back to list', tasks_path %>
</div>